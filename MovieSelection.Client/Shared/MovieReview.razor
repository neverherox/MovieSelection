<Card>
    <CardBody>
        <CardHeader>@Review.UserName</CardHeader>
        <CardText>
            @Review.Text
        </CardText>
        <CardFooter>@Review.ReviewDate.Date.ToString("dd MMMM yyyy", _ci)</CardFooter>
    </CardBody>
</Card>

@code {
    [Parameter] public GetReview Review { get; set; }

    private CultureInfo _ci = new CultureInfo("en-US");
}
